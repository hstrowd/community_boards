<%= form_for @city do |f| %>
  <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% @city.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="location fields">
    <div class="field">
      <%= label :location, :city, "City" %><br />
      <%= text_field :location, :city, {:value => (@city.location && @city.location.city)} %>
    </div>
    <div class="field">
      <%= label :location, :state_cd, "State Code" %><br />
      <%= text_field :location, :state_cd, {:value => (@city.location && @city.location.state_cd), :size => 5} %>
    </div>
    <div class="field hidden">
      <%= hidden_field :location, :country_cd, {:value => current_country_cd} %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
